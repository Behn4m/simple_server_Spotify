{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "espidf",
            "name": "Launch",
            "request": "launch",
            "debugPort": 9998,
            "logLevel": 2,
            "mode": "manual",
            "verifyAppBinBeforeDebug": false,
            "tmoScaleFactor": 1,
            "initGdbCommands": [
                "target remote :3333",
                "/home/mj/esp/project1/simple_server_Spotify/build/https_server.elf",
                "mon reset halt",
                "flushregs",
                "thb main"
            ],
            "env": {
                "CUSTOM_ENV_VAR": "SOME_VALUE"
            }
        },
        {
            "name": "C/C++: gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}